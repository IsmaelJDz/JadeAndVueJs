doctype html5
html('lang'='es')
    head
        meta('charset'='UTF-8')
        meta(http-equiv='X-UA-Compatible',content='IE-edge')
        title Ejemplo con vue js
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u',crossorigin='anonymous')
        script(src='vue.js')
    body
        div#app
            template(v-if='name')
                h1 {{ gender == 'm' ? 'Bienvenida' : 'Bienvenido' }}, {{ name }}
                p Espero que disfrutes tu visita
                p Tu nombre al rev√©s es : {{ name.split('').reverse().join('') }}
            p(v-else) Por favor escribe tu nombre
            input(type='text', v-model='name', class='form-control' )
            br
            select(v-model='gender', class='form-control')
                option(value='h') Hombre
                option(value='m') Mujer
            p(v-if="name == ''", class="alert alert-danger") Este campo es obligatorio
            p(v-if="name.length < 2", class="alert alert-danger") El nombre no es valido
            hr
            pre {{ $data | json}}
        script(src='main.js')
    
